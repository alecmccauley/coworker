{
  "name": "coworker-app",
  "version": "1.0.1",
  "description": "Coworker App - Electron Desktop App",
  "main": "./out/main/index.js",
  "author": "The Modern Company",
  "homepage": "https://coworkers.2tm.ca/",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "start": "electron-vite preview",
    "dev:raw": "dotenv -e .env -- electron-vite dev",
    "dev": "pnpm -w exec pm2 start pnpm --name coworker-app --cwd ./coworker-app -- dev:raw",
    "pm2:start": "pnpm -w exec pm2 start pnpm --name coworker-app --cwd ./coworker-app -- dev:raw",
    "pm2:restart": "pnpm -w exec pm2 restart coworker-app",
    "pm2:stop": "pnpm -w exec pm2 stop coworker-app",
    "pm2:delete": "pnpm -w exec pm2 delete coworker-app",
    "pm2:logs": "pnpm -w exec pm2 logs coworker-app",
    "pm2:status": "pnpm -w exec pm2 status coworker-app",
    "build": "npm run typecheck && electron-vite build",
    "build:dev": "dotenv -e .env -- npm run build",
    "build:prod": "dotenv -e .env.production -- npm run build",
    "rebuild": "electron-rebuild -f -w better-sqlite3 || true",
    "postinstall": "electron-builder install-app-deps && npm run rebuild",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "dotenv -e .env.production -- npm run build && electron-builder --win",
    "build:mac:arm64": "pnpm -w dist:set-updates-url -- arm64 && dotenv -e .env.production -- npm run build && dotenv -e .env.production -- electron-builder --mac --arm64 && pnpm -w dist:rename-latest-mac-yml -- arm64",
    "build:mac:x64": "pnpm -w dist:set-updates-url -- x64 && dotenv -e .env.production -- npm run build && dotenv -e .env.production -- electron-builder --mac --x64 && pnpm -w dist:rename-latest-mac-yml -- x64",
    "build:mac": "pnpm -w build:shared && pnpm --filter coworker-app build:mac:arm64 && pnpm --filter coworker-app build:mac:x64",
    "build:mac:dev": "dotenv -e .env -- npm run build && dotenv -e .env -- electron-builder --mac",
    "build:linux": "dotenv -e .env.production -- npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@coworker/shared-services": "workspace:*",
    "@dqbd/tiktoken": "^1.0.22",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@lucide/svelte": "^0.561.0",
    "@paralleldrive/cuid2": "^3.3.0",
    "better-sqlite3": "^12.6.2",
    "driver.js": "^1.4.0",
    "drizzle-orm": "^0.45.1",
    "electron-updater": "^6.3.9",
    "mammoth": "^1.11.0",
    "pdf.js-extract": "^0.2.1",
    "sqlite-vec": "0.1.7-alpha.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron/rebuild": "^3.6.0",
    "@internationalized/date": "^3.10.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.1",
    "bits-ui": "^2.15.5",
    "clsx": "^2.1.1",
    "dotenv-cli": "^11.0.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-svelte": "^3.13.1",
    "pm2": "^6.0.14",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6"
  }
}
