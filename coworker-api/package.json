{
  "name": "coworker-api",
  "version": "1.0.0",
  "description": "Coworker API - Express 5 + Prisma 7 + TypeScript",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev:raw": "tsx watch src/server.ts",
    "dev": "pnpm -w exec pm2 start pnpm --name coworker-api --cwd ./coworker-api -- dev:raw",
    "pm2:start": "pnpm -w exec pm2 start pnpm --name coworker-api --cwd ./coworker-api -- dev:raw",
    "pm2:restart": "pnpm -w exec pm2 restart coworker-api",
    "pm2:stop": "pnpm -w exec pm2 stop coworker-api",
    "pm2:delete": "pnpm -w exec pm2 delete coworker-api",
    "pm2:logs": "pnpm -w exec pm2 logs coworker-api",
    "pm2:status": "pnpm -w exec pm2 status coworker-api",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@coworker/shared-services": "workspace:*",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/helmet": "^4.0.0",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
